<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vérificateur de Carte Bancaire</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .card-checker {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 300px;
            text-align: center;
        }

        .card-checker h1 {
            font-size: 1.2rem;
            margin-bottom: 20px;
        }

        .card-checker input {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 1rem;
        }

        .card-checker input:invalid {
            border-color: red;
        }

        .card-checker button {
            width: 100%;
            padding: 10px;
            background-color: #007BFF;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
            cursor: pointer;
        }

        .card-checker button:hover {
            background-color: #0056b3;
        }

        .error-message {
            color: red;
            font-size: 0.9rem;
            display: none;
        }
    </style>
</head>
<body>

    <div class="card-checker">
        <h1>Vérificateur de Carte Bancaire</h1>
        <form id="cardForm">
            <!-- Champ pour le numéro de carte -->
            <input 
                type="text" 
                id="cardNumber" 
                placeholder="Numéro de carte (16 chiffres)" 
                pattern="^\d{16}$" 
                required 
                title="Le numéro doit contenir exactement 16 chiffres"
            >
            <div id="cardNumberError" class="error-message">Le numéro de carte doit contenir exactement 16 chiffres.</div>

            <!-- Champ pour la date d'expiration -->
            <input 
                type="text" 
                id="expiryDate" 
                placeholder="Date d'expiration (MM/AA)" 
                pattern="^(0[1-9]|1[0-2])\/\d{2}$" 
                required 
                title="Le format doit être MM/AA"
            >
            <div id="expiryDateError" class="error-message">La date doit être au format MM/AA.</div>

            <!-- Champ pour le CCV -->
            <input 
                type="text" 
                id="ccv" 
                placeholder="CCV (3 chiffres)" 
                pattern="^\d{3}$" 
                required 
                title="Le CCV doit contenir exactement 3 chiffres"
            >
            <div id="ccvError" class="error-message">Le CCV doit contenir exactement 3 chiffres.</div>

            <!-- Bouton de validation -->
            <button type="submit">Valider</button>
        </form>
    </div>

    <script>
        const form = document.getElementById('cardForm');

        // Ajout des contrôles et des messages d'erreur
        form.addEventListener('submit', function (event) {
            let isValid = true;

            // Vérification du numéro de carte
            const cardNumber = document.getElementById('cardNumber');
            const cardNumberError = document.getElementById('cardNumberError');
            if (!cardNumber.validity.valid) {
                cardNumberError.style.display = 'block';
                isValid = false;
            } else {
                cardNumberError.style.display = 'none';
            }

            // Vérification de la date d'expiration
            const expiryDate = document.getElementById('expiryDate');
            const expiryDateError = document.getElementById('expiryDateError');
            if (!expiryDate.validity.valid) {
                expiryDateError.style.display = 'block';
                isValid = false;
            } else {
                expiryDateError.style.display = 'none';
            }

            // Vérification du CCV
            const ccv = document.getElementById('ccv');
            const ccvError = document.getElementById('ccvError');
            if (!ccv.validity.valid) {
                ccvError.style.display = 'block';
                isValid = false;
            } else {
                ccvError.style.display = 'none';
            }

            // Empêche l'envoi du formulaire si une erreur est détectée
            if (!isValid) {
                event.preventDefault();
            } else {
                alert('Carte validée avec succès !');
            }
        });
    </script>

</body>
</html>
